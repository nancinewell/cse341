</head>
<body>
    <%- include('includes/header.ejs')%>
<main>

<% if(books.length > 0){ %>
<section class="library-cards">
    <% for(let book of books){%>
    <article>
        <header>
            <h2><%= book.title %></h2>
            <h3><%= book.author %></h3>
        </header>
        <img src="<%= book.image %>" alt="Image of <%= book.title %>">
        <p><%= book.desc %></p>
        <h4><%= book.price %></h4>
        <form action="/nix-book" method="post">
        <input type="hidden" name="title" value="<%= book.title %>">
        <button type="submit">X</button>
        </form>
    </article>
    <% } %>
</section>
    
<% } else { %>
    <h1>You've got a lot of work to do. The library is empty.</h1>
<% } %>
</main>
<%- include('includes/footer.ejs')%>